# app/views/layouts/navigation/_sidebar.erb
<div class="main-sidebar">
  <div class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
      </div>
      <div class="pull-left info">
        <p>
          <% if user_signed_in? %>
              <span class="hidden-xs"><%= current_user.name %></span>
            <% else %>
              Not signed in
            <% end %>
        </p>
        <a href="#">
          <i class="fa fa-circle text-success">
          </i>Online
          </a>
      </div>
    </div>
    <form action="#" class="sidebar-form" method="get">
      <div class="input-group">
        <input class="form-control" name="q" placeholder="Search..." type="text" />
        <span class="input-group-btn">
        <button class="btn btn-flat" id="search-btn" name="search" type="submit">
        <i class="fa fa-search">
        </i></button></span>
      </div>
    </form>
    <ul class="sidebar-menu">
      <li class="header">
        HEADER
      </li>
      <li class="active">
        <a href="#">
        <span><%= link_to 'Concerts', concerts_path %></span>
        </a>
      </li>
      <li>
        <a href="#">
        <span><%= link_to 'Singers', singers_path %></span>
        </a>
      </li>
      <li>
        <a href="#">
        <span><%= link_to 'Songs', songs_path %></span>
        </a>
      </li>
      <li class="treeview">
        <a href="#">
          <span>Multilevel</span>
          <i class="fa fa-angle-left pull-right">
          </i></a>
        <ul class="treeview-menu">
          <% if user_signed_in? %>
            <li>
              <a href="#"><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete  %></a>
            </li>
            <li>
              <a href="#"><%= link_to 'Profile', edit_user_registration_path %></a>
            </li>
          <% else %>
          <li>
            <a href="#"><%= link_to 'Sign In', new_user_session_path %></a>
          </li>
          <li>
            <a href="#"><%= link_to 'New User Signup', new_user_registration_path %></a>
          </li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
</div>